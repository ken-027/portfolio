{
    "name": "personal-site",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "react-router build",
        "dev": "react-router dev",
        "start": "react-router-serve ./build/server/index.js",
        "typecheck": "react-router typegen && tsc",
        "build:move": "cp -r build/client/* deploy",
        "build:directory": "[ -d ./deploy ] && npm run build:move || mkdir deploy && npm run build:move",
        "build:push": "cd deploy & git add . & git commit -m 'deployment' & git push origin main --force",
        "build:automate": "npm run clear-deployments && npm run build & npm run build:directory & npm run build:push",
        "clear-deployments": "rm -rf deploy/{assets,fonts,icons,images,pdf,resume,section-illustration}"
    },
    "dependencies": {
        "@emailjs/browser": "^4.4.1",
        "@react-router/node": "^7.5.0",
        "@react-router/serve": "^7.5.0",
        "clsx": "^2.1.1",
        "hamburger-react": "^2.5.2",
        "isbot": "^5.1.17",
        "moment": "^2.30.1",
        "motion": "^12.6.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-icon-cloud": "^4.1.7",
        "react-router": "^7.5.0",
        "react-type-animation": "^3.2.0",
        "swiper": "^11.2.6",
        "tailwind-merge": "^3.2.0"
    },
    "devDependencies": {
        "@react-router/dev": "^7.5.0",
        "@tailwindcss/vite": "^4.0.0",
        "@types/node": "^20",
        "@types/react": "^19.0.1",
        "@types/react-dom": "^19.0.1",
        "react-router-devtools": "^1.1.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.7.2",
        "vite": "^5.4.11",
        "vite-tsconfig-paths": "^5.1.4"
    }
}
